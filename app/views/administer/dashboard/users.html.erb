<%= content_for(:title,  '用户列表 | Koogle') %>
<section class="content-header">
  <h1>
    用户列表 <small>注册信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>数据中心</a></li>
    <li class="active"><i class="fa fa-user"></i> 用户信息</li>
  </ol>
</section>
<%= render partial: 'layouts/notice' %>
<section class="content">
  <div class="box box-warning">
    <div class="box-header">
      <form action="<%= users_path %>" method="get">
        <div class="form-group has-feedback">
          <div class="input-group" style="width: 300px">
            <input type="text" name="query" value="<%= params[:query]%>" class="form-control" placeholder="键入用户昵称、邮箱">
          <span class="input-group-btn">
              <button class="btn btn-default btn-flat" type="submit"><i class="fa fa-slideshare"></i></button>
          </span>
          </div>
        </div>
      </form>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">头图</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">昵称</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">信息</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">操作</th>
            </tr>
            </thead>
            <tbody>
            <% cache [:users, @users.total_entries, @users] do %>
                <% @users.each do |user| %>
                  <tr style="text-align: center">
                    <td>
                      <img src="<%= display_avatar user  %>" style="height: 100px;width: 100px">
                    </td>
                    <td style="text-align: left">
                      <br>
                      <span class="label
                  <% if user.role =='admin' %>
                    label-danger
                  <% elsif user.role =='fucker'%>
                    label-warning
                  <% elsif user.role =='looker'%>
                    label-default
                  <% end %>
                  " style="font-size: 16px">
                        <i class="fa fa-drupal"></i>
                        <%= display_role user %>
                      </span>
                      <br><br>
                      <span class="label label-info" style="font-size: 16px">
                        <i class="fa fa-cc-amex"></i>
                        <%= display_name user %>
                      </span>
                    </td>
                    <td style="text-align: left">
                      <br>
                      <span class="label label-primary" style="font-size: 16px">
                        <i class="fa fa-map-marker"></i>
                        <%= user.location %>
                      </span>
                      <br><br>
                      <span class="label label-success" style="font-size: 16px">
                        <i class="fa fa-envelope"></i>
                        <%= user.email %>
                      </span>
                    </td>
                    <td>
                      <% if user.role == 'looker'%>
                          <a href="<%= role_set_path(user_id:user.id, role:'admin') %>" data-confirm="将用户添加为管理员" class="btn btn-danger">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>管理权限</span>
                          </a><br><br>
                          <a href="<%= role_set_path(user_id:user.id, role:'fucker') %>" data-confirm="将用户添加毛片观看权限" class="btn btn-warning">
                            <i class="glyphicon glyphicon-eye-open"></i>
                            <span>毛片大师</span>
                          </a>
                      <% elsif user.role == 'fucker' %>
                          <a href="<%= role_set_path(user_id:user.id, role:'admin') %>" data-confirm="将用户添加为管理员" class="btn btn-danger">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>管理权限</span>
                          </a><br><br>
                          <a href="<%= role_set_path(user_id:user.id, role:'looker') %>" data-confirm="将用户添加视频浏览权限" class="btn btn-success">
                            <i class="glyphicon glyphicon-eye-open"></i>
                            <span>视频浏览</span>
                          </a>
                      <% elsif user.role == 'admin' %>
                          <a href="<%= role_set_path(user_id:user.id, role:'fucker') %>" data-confirm="将用户添加毛片观看权限" class="btn btn-warning">
                            <i class="glyphicon glyphicon-eye-open"></i>
                            <span>毛片大师</span>
                          </a><br><br>
                          <a href="<%= role_set_path(user_id:user.id, role:'looker') %>" data-confirm="将用户添加视频浏览权限" class="btn btn-success">
                              <i class="glyphicon glyphicon-eye-open"></i>
                              <span>视频浏览</span>
                          </a>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：「<%= @users.total_entries%>」用户</h5></div>
        </div>
        <div class="col-sm-7">
          <div class="dataTables_paginate paging_simple_numbers">
            <%= will_paginate @users, :class=>'apple_pagination', :previous_label => '上一页', :next_label => '下一页' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>