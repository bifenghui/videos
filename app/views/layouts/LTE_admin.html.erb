<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : '暗夜小站 | 数据中心' %></title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_link_tag 'LTE_admin/lte_admin', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'LTE_admin/lte_admin', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
  <style type="text/css">
      .jqstooltip { position: absolute;left: 0px;top: 0px;visibility: hidden;background: rgb(0, 0, 0) trans parent;background-color: rgba(0,0,0,0.6);
          filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#99000000, endColorstr=#99000000);
          -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=#99000000, endColorstr=#99000000)";
          color: white;font: 10px arial, san serif;text-align: left;white-space: nowrap;padding: 5px;border: 1px solid white;z-index: 10000;  }
      .jqsfield { color: white;font: 10px arial, san serif;text-align: left;}
  </style>
</head>

<body id="body-skin" class="<% if session[:admin].present? %>sidebar-mini wysihtml5-supported skin-black-light<% else %><%= user_style current_user %><% end %>">
<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <a href="/" class="logo">
      <span class="logo-mini"><b>暗</b>夜</span>
      <span class="logo-lg"><b>暗夜小站</b>视频</span>
    </a>
    <nav class="navbar navbar-static-top" role="navigation">
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <%#= render :partial => 'layouts/ltes/top_right_info' %>
          <%= render :partial => 'layouts/ltes/top_right_user' %>
          <li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-lg fa-heartbeat"></i></a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <aside class="main-sidebar">
    <section class="sidebar">
      <div class="user-panel">
        <div class="pull-left image">
          <% if session[:admin].present? %>
              <img src="<%= image_url('face.png') %>" class="img-circle" alt="User Image" />
          <% else %>
              <img src="<%= user_avatar current_user %>" class="img-circle" alt="User Image" />
          <% end %>

        </div>
        <div class="pull-left info">
          <% if session[:admin].present? %>
              <p>超级管理员</p>
          <% else %>
              <p>管理员</p>
          <% end %>

          <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
      </div>
      <!-- 搜索 -->
      <form action="<%= admin_search_path %>" method="get" class="sidebar-form">
        <div class="input-group">
          <input type="text" name="query" value="<%= params[:query] %>" class="form-control" placeholder="Search..."/>
              <span class="input-group-btn">
                <button type='submit' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
              </span>
        </div>
      </form>
      <!-- 左侧菜单 导航-->
      <div>
        <div><%= render :partial => 'layouts/ltes/left_menu_navigation' %></div>
      </div>
    </section>
  </aside>
  <!-- 页面调用 -->
  <div class="content-wrapper">
    <%= yield %>
  </div>
  <!-- 页脚-->
  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>暗夜大豆芽</b>
    </div>
    <strong>Copyright &copy; 2014-2015 <a href="#">暗夜的神话</a>.</strong> All rights reserved.
  </footer>
  <!-- 右侧菜单 导航 -->
  <aside class="control-sidebar control-sidebar-dark">
    <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
      <li class="active"><a href="#control-sidebar-theme-demo-options-tab" data-toggle="tab"><i class="fa fa-wrench"></i></a></li>
      <li><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
      <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
    </ul>
    <div class="tab-content">
      <!-- 右侧菜单 主要信息-->
      <div class="tab-pane" id="control-sidebar-home-tab">
        <div><%= render :partial => 'layouts/ltes/right_menu_home' %></div>
      </div>
      <!--  右侧菜单 皮肤主题 -->
      <div id="control-sidebar-theme-demo-options-tab" class="tab-pane active">
        <div><%= render :partial => 'layouts/ltes/right_menu_skin' %></div>
      </div>
      <!-- 右侧菜单  基本设置-->
      <div class="tab-pane" id="control-sidebar-settings-tab">
        <div><%= render :partial => 'layouts/ltes/right_menu_setting' %></div>
      </div>
    </div>
  </aside>
  <div class='control-sidebar-bg'></div>
</div>
<script type="text/javascript">
    $.widget.bridge('uibutton', $.ui.button);
</script>
</body>
</html>