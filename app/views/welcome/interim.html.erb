<%= stylesheet_link_tag 'http://7xjfim.com2.z0.glb.qiniucdn.com/Iva.css' %>
<%= javascript_include_tag 'http://7xjfim.com2.z0.glb.qiniucdn.com/Iva.js' %>
<%= content_for(:title, symbol_truncate(@video['title']) + ' | 华轩·张') %>
<div class="container">
  <div class="grid">
    <div class="display">
      <div class="player-title">
        「优酷视频」<%= symbol_truncate @video['title'] %>
      </div>
      <div class="player-poster">
        <p><%= video_time @video['duration'] %>
          <span class="v-time"><%= @video['published']%></span></p>
      </div>
      <div class="player">
        <div style="padding-left: 5px;padding-top: 5px">
          <div id="playerCnt" style="width:948px;height:568px;"></div>
        </div>
      </div>
    </div>
  </div>
  <div style="padding-top: 50px"></div>
</div>
<script type="text/javascript" >
    var ivaInstance = new Iva('playerCnt', {
        appkey: 'N1PBDCjXl',
        title: '<%= symbol_truncate(@video['title']) %>',
        video: 'http://v.youku.com/v_show/id_<%= @video['id'] %>.html',
        cover: '<%= Settings.qiniu_cdn_host %>img_video_poster.png',
        autoplay: true
    });
</script>