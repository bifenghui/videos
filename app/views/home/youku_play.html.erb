<%= content_for(:title, symbol_truncate(@info['title']) + ' | 暗夜TV') %>
<div class="container">
  <div class="grid">
    <div class="display">
      <div class="player-title">
        「临时播放」<%= symbol_truncate @info['title'] %>
      </div>
      <div class="player-poster">
        <p><%= video_time @info['duration'] %>
          <span class="v-time"><%= @info['published']%></span></p>
      </div>
      <div class="player">
        <div style="padding-left: 5px;padding-top: 5px">
          <div id="playerCnt" style="width:948px;height:568px;"></div>
        </div>
      </div>
    </div>
  </div>
  <div style="padding-top: 50px"></div>
</div>
<script type="text/javascript" >
    var ivaInstance = new Iva('playerCnt', {
        appkey: 'EkF-n6aZY',
        title: '<%= symbol_truncate(@info['title']) %>',
        video: 'http://v.youku.com/v_show/id_<%= @info['id'] %>.html',
        cover: '<%= Settings.qiniu_cdn_host %>img_video_poster.png',
        autoplay: true
    });
</script>