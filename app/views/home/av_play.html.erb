<%= content_for(:title, @av.av_title + ' | 暗夜TV') %>
<div class="container">
  <div class="grid">
    <div class="display">
      <div class="player-title">
        「<%= @av.av_type %>」<%= @av.av_title %>
      </div>
      <div class="player-poster">
        <p><%= @av.av_duration %>
          <span class="v-time"><%= @av.created_at.strftime('%m/%d %H:%M')%></span></p>
      </div>
      <div class="player">
        <div style="padding-left: 5px;padding-top: 5px">
          <div id="playerCnt" style="width:948px;height:568px;"></div>
        </div>
      </div>
    </div>
  </div>
  <div style="padding-top: 50px"></div>
</div>
<script type="text/javascript" >
    var ivaInstance = new Iva('playerCnt', {
        appkey: 'EkF-n6aZY',
        title: '<%= @av.av_title %>',
        video: '<%= @av.av_source %>',
        cover: '<%= Settings.qiniu_cdn_host %>img_video_poster.png',
        autoplay: true
    });
</script>